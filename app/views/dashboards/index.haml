-# Analytics
= render :partial => 'shared/google_analytics'
%section.hero
  .hero-body
    .container
      .level
        .level-left
          .level-item
            .title Dashboard
      .columns
        = render template: 'shared/dashboard/_breadcrumb'
      .columns.is-multiline
        .column
          .box
            .heading Top Seller Total
            .title 56,950
            .level
              .level-item
                %div
                  .heading Sales $
                  .title.is-5 250,000
              .level-item
                %div
                  .heading Overall $
                  .title.is-5 750,000
              .level-item
                %div
                  .heading Sales %
                  .title.is-5 25%
        .column
          .box
            .heading Revenue / Expenses
            .title 55% / 45%
            .level
              .level-item
                %div
                  .heading Rev Prod $
                  .title.is-5 30%
              .level-item
                %div
                  .heading Rev Serv $
                  .title.is-5 25%
              .level-item
                %div
                  .heading Exp %
                  .title.is-5 45%
        .column
          .box
            .heading Total de Publicaciones
            .field.is-grouped
              .control
                .title= @total_adds
              .control
                - if @total_adds <= 0
                  %i.material-icons.md-18.margin-icon.trending_down trending_down
                - else
                  %i.material-icons.md-18.margin-icon.trending_up trending_up
            .level
              .level-item
                %div
                  .heading Positive
                  .title.is-5 1560
              .level-item
                %div
                  .heading Negative
                  .title.is-5 368
              .level-item
                %div
                  .heading Pos/Neg %
                  .title.is-5 77% / 23%
        .column
          .box
            .heading Orders / Returns
            .title 75% / 25%
            .level
              .level-item
                %div
                  .heading Orders $
                  .title.is-5 425,000
              .level-item
                %div
                  .heading Returns $
                  .title.is-5 106,250
              .level-item
                %div
                  .heading Success %
                  .title.is-5 + 28,5%
